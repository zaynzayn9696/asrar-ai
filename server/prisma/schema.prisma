generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

///
//// BASE MODELS (unchanged)
///

model User {
  id                 Int       @id @default(autoincrement())
  name               String
  email              String    @unique
  passwordHash       String
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  plan               String    @default("free") 
  isPremium          Boolean   @default(false)
  lemonCustomerId     String?   @unique
  lemonSubscriptionId String?

  saveHistoryEnabled Boolean   @default(true)
  photoUrl           String?

  usage              Usage?
  messages           Message[]
  conversations      Conversation[]
  emotionProfile     UserEmotionProfile?
  emotionalTimelineEvents EmotionalTimelineEvent[]
  emotionalPatterns  EmotionalPattern[] 
  emotionalTriggerEvents EmotionalTriggerEvent[]
}

model Usage {
  userId        Int      @id
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  dailyCount    Int      @default(0)
  monthlyCount  Int      @default(0)
  dailyResetAt  DateTime?
  monthlyResetAt DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Conversation {
  id           Int       @id @default(autoincrement())
  userId       Int
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  characterId  String
  title        String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  messages     Message[]
  emotionState ConversationEmotionState?
  emotionalTimelineEvents EmotionalTimelineEvent[]
  stateMachine ConversationStateMachine?
  emotionalTriggerEvents EmotionalTriggerEvent[]

}

model Message {
  id              Int           @id @default(autoincrement())
  userId          Int
  characterId     String
  conversationId  Int
  role            String
  content         String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversation    Conversation  @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  emotion         MessageEmotion?
}

//
// Emotional Engine v1 enum
//
enum EmotionLabel {
  NEUTRAL
  SAD
  ANXIOUS
  ANGRY
  LONELY
  STRESSED
  HOPEFUL
  GRATEFUL
}

//
// PHASE-4 NEW ENUMS
//
enum EmotionTrend {
  UP
  DOWN
  STABLE
  VOLATILE
}

enum UserMemoryMode {
  LIGHT
  STANDARD
  RICH
}

//
// MESSAGE EMOTION — With Phase-4 extensions
//
model MessageEmotion {
  id             Int           @id @default(autoincrement())
  messageId      Int           @unique
  message        Message       @relation(fields: [messageId], references: [id], onDelete: Cascade)

  primaryEmotion EmotionLabel
  intensity      Int
  confidence     Float
  cultureTag     String?
  notes          String?
  createdAt      DateTime      @default(now())

  /// PHASE-4 FIELDS
  secondaryEmotion EmotionLabel?
  emotionVector    Json?          // distribution / vector
  intensityDelta   Float?         // change vs previous
  trend            EmotionTrend?  // UP / DOWN / STABLE / VOLATILE
  topicTags        String[] @default([])
  isKernelRelevant Boolean  @default(true)
  detectorVersion  String?
}

//
// CONVERSATION EMOTION STATE — With Phase-4 short-term kernel fields
//
model ConversationEmotionState {
  id               Int          @id @default(autoincrement())
  conversationId   Int          @unique
  conversation     Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  dominantEmotion  EmotionLabel
  avgIntensity     Float        @default(0)
  sadnessScore     Float        @default(0)
  anxietyScore     Float        @default(0)
  angerScore       Float        @default(0)
  lonelinessScore  Float        @default(0)
  lastUpdatedAt    DateTime     @default(now())

  /// PHASE-4 SHORT-TERM MEMORY
  windowSize             Int     @default(20)
  rollingEmotionStats    Json?
  rollingTopicStats      Json?
  activeThreads          Json?
  sessionBaselineEmotion EmotionLabel?
  currentBaselineEmotion EmotionLabel?
  stabilityScore         Float   @default(0)
  flags                  Json?
  lastKernelUpdateAt     DateTime?
}

//
// EMOTIONAL TIMELINE — Unchanged
//
model EmotionalTimelineEvent {
  id             Int          @id @default(autoincrement())
  userId         Int
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversationId Int
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  emotion        EmotionLabel
  intensity      Int
  createdAt      DateTime     @default(now())
  tag            String?
}

//
// USER EMOTION PROFILE — With Phase-4 long-term memory & pattern fields
//
model UserEmotionProfile {
  id               Int       @id @default(autoincrement())
  userId           Int       @unique
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  sadnessScore     Float     @default(0)
  anxietyScore     Float     @default(0)
  angerScore       Float     @default(0)
  lonelinessScore  Float     @default(0)
  hopeScore        Float     @default(0)
  gratitudeScore   Float     @default(0)
  avgIntensity     Float     @default(0)
  lastUpdatedAt    DateTime  @default(now())

  /// PHASE-4 LONG-TERM MEMORY
  emotionTraitVector   Json?
  emotionStats         Json?
  topicProfile         Json?
  personaAffinity      Json?
  volatilityIndex      Float    @default(0)
  recentKernelSnapshot Json?
  memoryMode           UserMemoryMode @default(STANDARD)
  retentionPolicy      Json?
  lastPatternRefreshAt DateTime?
  emotionalAnchors     String[] @default([])
}

//
// PHASE-4 — Emotional Pattern Table
//
model EmotionalPattern {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  kind        String
  score       Float
  status      String   @default("ACTIVE")
  firstSeenAt DateTime @default(now())
  lastSeenAt  DateTime @default(now())
  metadata    Json?

  @@index([userId])
  @@index([userId, kind])
}

model EmotionalTriggerEvent {
  id             Int           @id @default(autoincrement())
  userId         Int
  conversationId Int?

  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversation   Conversation? @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  type           String        // e.g. "family_conflict"
  intensity      Int           // 1–5
  createdAt      DateTime      @default(now())

  @@index([userId, createdAt])
  @@index([conversationId, createdAt])
}

//
// PHASE-3 — Conversation State Machine (unchanged)
//
model ConversationStateMachine {
  id             Int          @id @default(autoincrement())
  conversationId Int          @unique
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  currentState   String
  lastEmotion    EmotionLabel
  lastUpdatedAt  DateTime     @default(now())
  notes          String?
}
